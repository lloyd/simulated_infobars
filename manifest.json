{
  "name": "Simulated Infobars",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Hey chrome dudes, why you lagging on experimental.infobars?",
  "browser_action": {
    "default_icon": "icon.png"
  },
  "permissions": [
    "http://*/",
    "https://*/"
  ],
  "background": {
    "scripts": ["guts/infobar.js", "background.js"],
    "persistent": false
  },
  "web_accessible_resources": [
    "my_infobar.html"
  ]
}
